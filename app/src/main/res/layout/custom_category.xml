<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_marginStart="15dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="350dp">



    <TextView
        android:id="@+id/categorytextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a new Category!"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_add_cat_black_24dp"
        android:layout_alignRight="@id/categorytextview"/>



    <EditText
        android:id="@+id/addcat_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"

        android:hint="Add a new Category"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_below="@id/categorytextview" />

    <requestFocus />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addcat_edittext"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="end"
        >

        <Button
            android:id="@+id/cancel_cat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"

            android:textColor="#F75931"
            android:background="?android:attr/selectableItemBackground"
            android:text="Cancel" />

        <Button
            android:id="@+id/add_cat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#F75931"
            android:background="?android:attr/selectableItemBackground"
            android:text="Add" />
    </LinearLayout>

</RelativeLayout>